<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".usermanagment.privatedtetailssFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/finishbtn"
            android:layout_width="155dp"
            android:layout_height="0dp"
            android:layout_marginStart="114dp"

            android:layout_marginBottom="64dp"
            android:backgroundTint="@color/green"
            android:text="FINISH"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phonebenefactor" />

        <EditText
            android:id="@+id/namebenefactor"
            android:layout_width="237dp"
            android:layout_height="0dp"
            android:layout_marginStart="61dp"
            android:layout_marginBottom="100dp"
            android:ems="10"
            android:hint="name"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/phonebenefactor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Parephoto" />

        <EditText
            android:id="@+id/phonebenefactor"
            android:layout_width="251dp"
            android:layout_height="0dp"
            android:layout_marginStart="61dp"
            android:layout_marginBottom="100dp"
            android:ems="10"
            android:hint="phone number"
            android:inputType="phone"
            app:layout_constraintBottom_toTopOf="@+id/finishbtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/namebenefactor" />

        <ImageButton
            android:id="@+id/Parephoto"
            android:layout_width="248dp"
            android:layout_height="171dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="95dp"
            android:src="@drawable/perphoto"
            app:layout_constraintBottom_toTopOf="@+id/namebenefactor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>